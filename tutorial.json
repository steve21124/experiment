{
  "$jason": {
    "head": {
      "title": "Jasopedia",
      "styles": {
        "bold": {
          "font": "HelveticaNeue-CondensedBold",
          "size": "15"
        },
        "padded": {
          "padding": "10"
        },
        "normal": {
          "font": "HelveticaNeue",
          "size": "12"
        }
      },
      "actions": {
        "$foreground": {
          "type": "$reload"
        }
      }
    },
    "body": {        
		"sections": [{
		    "items": [
		      {
		        "type": "vertical",
		        "components": [
  		          {
  		            "type": "label",
  		            "text": "Start with CreateForm which will create new form"
  		          },					
		          {
		            "type": "image",
		            "url": "https://raw.githubusercontent.com/steve21124/experiment/master/createform.png"
		          }
		        ]
		      },
		      {
		        "type": "vertical",
		        "components": [
    		          {
    		            "type": "label",
    		            "text": "Once form done, tapping on the form cell enable adding data to the form"
    		          },					
		          {
		            "type": "image",
		            "url": "https://raw.githubusercontent.com/steve21124/experiment/master/weddingguest.png"
		          }
		        ]
		      },
		      {
		        "type": "vertical",
		        "components": [
    		          {
    		            "type": "label",
    		            "text": "to export the form tap on share on top right"
    		          },					
		          {
		            "type": "image",
		            "url": "https://raw.githubusercontent.com/steve21124/experiment/master/spreadsheet.png"
		          }
		        ]
		      }			  			  
		    ]
		  }],
      "footer": {
          "tabs": {
			  "style": {
			    	"background": "#373737"
			    },
              
              "items": [
                        {
                        "image": "bundle:\/\/\/fa-list.png",
                        "text": "Form",
                        "style": {
                        "height": "21"
                        },
                        "href": {
                        "view": "FormSchemaListViewController",
                        "transition": "update",
                        }
                        },
                        {
                        "image": "bundle:\/\/\/info-icon.png",
                        "text": "Tutorial",
                        "style": {
                        "height": "21"
                        },
                        "url": "https://raw.githubusercontent.com/steve21124/experiment/master/tutorial.json"
                        }
                        ]
          }
      }
	  
    }
  }
}