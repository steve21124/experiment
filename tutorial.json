		          {
		            "type": "label",
		            "text": "John"
		          },
		          {
		            "type": "label",
		            "text": "Doe"
		          }
		        ]
		      },
		      {
		        "type": "vertical",
		        "components": [
		          {
		            "type": "image",
		            "url": "https://jasonclient.org/img/mary.png"
		          },
		          {
		            "type": "label",
		            "text": "Mary"
		          },
		          {
		            "type": "label",
		            "text": "Jane"
		          }
		        ]
		      }
		    ]
		  }]
      "footer": {
